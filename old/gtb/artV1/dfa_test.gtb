(* Example GTB script *)

S ::= A 'a' | A 'b' | 'c' A B .

B ::= 'b' | 'a'.

A ::= 'a'.

(
gdg_file := open["gdg.vcg"]
nfa_file := open["nfa.vcg"]
dfa_file := open["dfa.vcg"]
table_file := open["table.tbl"]
ssg_file := open["ssg.vcg"]

this_grammar := grammar[S]
write[this_grammar] 

this_gdg := gdg[this_grammar]
write[gdg_file this_gdg]
close[gdg_file]

